<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.WelcomePage"
            prefHeight="720.0" prefWidth="1280.0" stylesheets="@../../../style_sheet/welcome_page.css">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Text text="Welcome to cup head game" id="welcome_text"/>
            <Button text="login" onMouseClicked="#login" fx:id="loginButton" onMouseEntered="#mouseShapeEnter" onMouseExited="#mouseShapeExit"/>
            <Button text="register" onMouseClicked="#register" fx:id="registerButton" onMouseEntered="#mouseShapeEnter" onMouseExited="#mouseShapeExit"/>
            <Button text="guest" onMouseClicked="#guest" fx:id="guestButton" onMouseEntered="#mouseShapeEnter" onMouseExited="#mouseShapeExit"/>
            <Button text="exit" onMouseClicked="#exit" fx:id="exitButton" onMouseEntered="#mouseShapeEnter" onMouseExited="#mouseShapeExit"/>
        </VBox>
    </center>

</BorderPane>
