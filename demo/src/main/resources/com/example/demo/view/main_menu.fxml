<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.view.MainMenu"
            prefHeight="720.0" prefWidth="1280.0" stylesheets="@../../../../style_sheet/login_page.css">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Text text="Main menu" id="login_menu"/>
            <Button text="New Game" fx:id="newGameButton" onMouseClicked="#newGame" onMouseEntered="#mouseShapeEnter" onMouseExited="#mouseShapeExit"/>
            <Button text="Resume" fx:id="resumeGameButton" onMouseClicked="#resumeGame" onMouseEntered="#mouseShapeEnter" onMouseExited="#mouseShapeExit"/>
            <Button text="Profile" fx:id="profileButton" onMouseClicked="#profile" onMouseEntered="#mouseShapeEnter" onMouseExited="#mouseShapeExit"/>
            <Button text="Scoreboard" fx:id="scoreButton" onMouseClicked="#scoreboard" onMouseEntered="#mouseShapeEnter" onMouseExited="#mouseShapeExit"/>
            <Button text="Setting" onMouseEntered="#mouseShapeEnter" onMouseExited="#mouseShapeExit" onMouseClicked="#setting"/>
            <Button text="Back" fx:id="backButton" onMouseClicked="#back" onMouseEntered="#mouseShapeEnter" onMouseExited="#mouseShapeExit"/>
        </VBox>
    </center>

</BorderPane>
