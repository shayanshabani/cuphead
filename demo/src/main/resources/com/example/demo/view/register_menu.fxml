<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.view.RegisterMenu"
            prefHeight="720.0" prefWidth="1280.0" stylesheets="@../../../../style_sheet/register_page.css">
    <center>
        <VBox alignment="CENTER" spacing="10" maxWidth="200">
            <Text text="Register menu" id="register_menu"/>
            <Label text="Username"/>
            <TextField promptText="Enter your username" fx:id="username"/>
            <Label text="Password"/>
            <TextField promptText="Enter your password" fx:id="firstPassword"/>
            <Label text="Password again"/>
            <TextField promptText="Enter your password" fx:id="secondPassword"/>
            <Button text="Register" fx:id="registerButton" onMouseClicked="#register" onMouseEntered="#mouseShapeEnter" onMouseExited="#mouseShapeExit"/>
            <Button text="Back" fx:id="backButton" onMouseClicked="#back" onMouseEntered="#mouseShapeEnter" onMouseExited="#mouseShapeExit"/>
        </VBox>
    </center>

</BorderPane>
